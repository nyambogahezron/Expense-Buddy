{
	"expo": {
		"name": "Expense Buddy",
		"slug": "expense-buddy",
		"version": "1.0.2",
		"orientation": "portrait",
		"icon": "./assets/images/icon.png",
		"scheme": "myapp",
		"userInterfaceStyle": "automatic",
		"newArchEnabled": true,
		"ios": {
			"supportsTablet": true,
			"infoPlist": {
				"NSFaceIDUsageDescription": "Allow $(PRODUCT_NAME) to use Face ID to unlock Secret Info."
			},
			"bundleIdentifier": "com.hezron.expensebuddy"
		},
		"android": {
			"edgeToEdgeEnabled": true,
			"adaptiveIcon": {
				"foregroundImage": "./assets/images/adaptive-icon.png",
				"monochromeImage": "./assets/images/adaptive-icon.png",
				"backgroundColor": "#ffffff"
			},
			"permissions": [
				"android.permission.USE_BIOMETRIC",
				"android.permission.USE_FINGERPRINT"
			],
			"package": "com.hezron.expensebuddy",
			"userInterfaceStyle": "automatic",
			"softwareKeyboardLayoutMode": "pan"
		},
		"web": {
			"bundler": "metro",
			"output": "static",
			"favicon": "./assets/images/favicon.png"
		},
		"plugins": [
			"expo-router",
			[
				"expo-local-authentication",
				{
					"faceIDPermission": "Allow $(PRODUCT_NAME) to use Face ID to unlock Application."
				}
			],
			"expo-font",
			[
				"expo-splash-screen",
				{
					"backgroundColor": "#111827",
					"image": "./assets/images/splash-con.png",
					"resizeMode": "contain",
					"imageWidth": 200
				}
			],
			"expo-web-browser"
		],
		"experiments": {
			"typedRoutes": true
		},
		"extra": {
			"router": {
				"origin": false
			},
			"eas": {
				"projectId": "4bd05ca0-6192-4078-8a9e-7dbc861b5429"
			}
		},
		"owner": "hezron"
	}
}
